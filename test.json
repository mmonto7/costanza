{
  "modules": {
    "base": {
      "topLevelName": "Phoenix",

      "mixins": [
        "thorax-dep-jquery",
        "thorax",
        "costanza",
        "costanza-thorax"
      ],
      "scripts": [
        {"src": "underscore.js", "bower": "underscore", "global": true}
      ]
    },

    "loader": {
      "topLevelName": "Loader",
      "mixins": [
        "lumbar-loader"
      ],
      "scripts": [
        "test/polyfill.js",
        "test/load.js"
      ]
    },
    "test": {
      "topLevelName": "Test",
      "mixins": [
        {
        "name": "test",
        "library": "phoenix-build",
        "overrides": {
          "test/lib/chai.js": "test_components/expect/index.js",
          "test/lib/sinon-chai.js": false
        }
        },
        "test-runner"
      ],
      "static": [
        {"src": "test/invalid.js", "dest": "invalid.js", "update-externals": true, "root": true}
      ]
    }
  },

  "mixins": [
    "."
  ],
  "test": {
    "auto-include": "test/"
  }
}
